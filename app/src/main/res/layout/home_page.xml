<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/match"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="6dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/teamimage"
                android:layout_width="150dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@drawable/karachivslahore"></ImageView>

            <TextView
                android:id="@+id/MatchDetails"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=" Karachi Kings vs Lahore Qalandars \n  Rs.1000/- \n  Date:- 5 Feb 2022 \n Venue:- Gaddafi Stadium Lahore"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="italic|bold|normal">

            </TextView>


        </LinearLayout>


    </android.support.v7.widget.CardView>
</LinearLayout>
